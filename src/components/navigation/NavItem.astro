---
import type {HTMLAttributes} from "astro/types";
interface Props {
    href: string;
    style: "active" | "inactive";
}

const {
    href,
    style = "inactive"
} = Astro.props

const baseClasses = "text-xl font-bold px-2 py-1 rounded-md hover:scale-105 transition duration-100 ease-in-out"

const styleClasses = {
    active: "bg-orange-400 border-orange-500 hover:bg-amber-400 hover:border-amber-500 text-white",
    inactive: "hover:bg-orange-200 hover:border-orange-300",
}[style]

const classes = `${baseClasses} ${styleClasses}`
---
<a href={href} class={classes}>
    <slot/>
</a>