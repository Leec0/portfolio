---
import type {HTMLAttributes} from "astro/types";
interface Props extends HTMLAttributes<"button"> {
    type?: "button" | "submit";
    size?: "sm" | "md" | "lg";
    theme?: "primary" | "inactive" | "active";
    classes?: string;
    href?: string;
}

const {
    type = "button",
    size = "md",
    theme = "primary",
    classes,
    href,
    ...rest
} = Astro.props

const sizeClasses = {
    sm: "text-sm px-5 py-2",
    md: "text-md px-5 py-2",
    lg: "text-lg px-5 py-2"
}[size]

const themeClasses = {
    primary: "bg-orange-400 hover:bg-orange-500 shadow-md hover:shadow-lg text-white",
    inactive: "border border-orange-400 text-orange-400 hover:bg-orange-400/10",
    active: "bg-orange-400 hover:bg-orange-500 text-white",
}[theme]

const baseClasses = "font-semibold text-center cursor-pointer rounded-xl transition-all duration-200"

const combinedClasses = `${baseClasses} ${themeClasses} ${sizeClasses} ${classes}`
---
{href ? (
<a href={href} class={combinedClasses} {...rest}>
    <slot/>
</a>
    ) : (
<button type={type} class={combinedClasses} {...rest}>
    <slot/>
</button>
    )}
