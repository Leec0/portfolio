---
import Button from "../pageElements/Button.astro";
const {title, description, date, slug} = Astro.props;
---
<section class="bg-stone-300/70 backdrop-blur-md border border-stone-300/20 shadow-md hover:shadow-xl transition-shadow p-6 rounded-md">
    <section class="flex flex-col justify-between h-full gap-4">
        <section class="flex flex-col gap-1">
            <section class="flex flex-row justify-between items-center">
                <h3 class="text-xl font-semibold">{title}</h3>
                <p>{date}</p>
            </section>
            <p>{description}</p>
        </section>
        <Button size="md" href=`projects/${slug}`>More details</Button>
    </section>
</section>